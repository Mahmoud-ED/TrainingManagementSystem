@model IEnumerable<Locations>

@{
    ViewData["Title"] = "قائمة المواقع";
}

<div class="container-fluid mt-4 mb-5">
    <div class="page-header mb-3 d-flex justify-content-between align-items-center flex-wrap pb-2 border-bottom">
        <!-- العنوان مع الأيقونة -->
        <h3><i class="fas fa-map-marker-alt me-2"></i> @ViewData["Title"]</h3>
        <a asp-action="Create" class="btn btn-primary mt-2 mt-md-0">
            <i class="fas fa-plus me-1"></i> إضافة موقع جديد
        </a>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4">اسم الموقع</th>
                            <th>العدد الكلي</th>
                            <th class="text-center">إجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="align-middle">
                                    @(item.FullCount.HasValue ? item.FullCount.Value.ToString() : "غير محدد")
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success mx-1" title="تعديل"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info mx-1" title="تفاصيل"><i class="fas fa-info-circle"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger mx-1" title="حذف"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
