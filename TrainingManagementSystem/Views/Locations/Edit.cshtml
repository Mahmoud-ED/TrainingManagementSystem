@model Locations

@{
    ViewData["Title"] = "تعديل الموقع";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-light">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]: @Model.Name</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">اسم الموقع</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FullCount" class="form-label fw-bold">عدد الأماكن الكلي</label>
                            <input asp-for="FullCount" type="number" class="form-control" />
                            <span asp-validation-for="FullCount" class="text-danger small"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check-circle me-2"></i>حفظ التعديلات
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-right me-2"></i>العودة إلى القائمة
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
