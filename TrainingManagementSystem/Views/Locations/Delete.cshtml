@model Locations

@{
    ViewData["Title"] = "تأكيد الحذف";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">هل أنت متأكد أنك تريد حذف هذا الموقع؟</h5>
                    <p>سيتم حذف هذا السجل بشكل نهائي ولا يمكن التراجع عن هذا الإجراء.</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">اسم الموقع</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">العدد الكلي</dt>
                        <dd class="col-sm-8">@(Model.FullCount.HasValue? Model.FullCount.Value.ToString() : "N/A")</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>إلغاء
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>نعم، قم بالحذف
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>