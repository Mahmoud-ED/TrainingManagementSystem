@model TrainingManagementSystem.Models.Entities.Level

@{
    ViewData["Title"] = "تعديل المستوى";
}

<h1>@ViewData["Title"]</h1>

<h4>المستوى</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Created" /> @* Preserve Created date *@

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">اسم المستوى</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" readonly /> @* Display Created Date, but don't allow edit *@
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">العودة إلى القائمة</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}