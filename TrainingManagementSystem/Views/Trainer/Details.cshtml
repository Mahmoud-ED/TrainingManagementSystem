@model Trainer

@{
    ViewData["Title"] = "الملف الشخصي للمدرب";
    string profileImageUrl = string.IsNullOrEmpty(Model.ProfileImageUrl) ? Url.Content("~/img/OIP.jpeg") : Url.Content($"~/pictures/trainers/{Model.ProfileImageUrl}");
    var specializations = Model.TrainerSpecializations?.Select(ts => ts.Specialization?.Name).Where(s => !string.IsNullOrEmpty(s)).ToList() ?? new List<string>();
    // افترض أن الموديل يحتوي على قائمة بالدورات التي قدمها المدرب. إذا لم يكن كذلك، يمكنك تجاهل هذا الجزء.
    // var coursesTaught = Model.CoursesTaught ?? new List<CourseDetails>();
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        /* === إعدادات الصفحة الأساسية === */
        body {
            background-color: #f8f9fa; /* خلفية رمادية فاتحة جداً */
        }

        .widget {
            background-color: #fff;
            border: 1px solid #e9ecef;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.04);
            transition: all 0.3s ease;
        }

        .widget-header {
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .widget-header h5 {
                margin: 0;
                font-weight: 600;
                color: #34495e;
                font-size: 1.1rem;
            }

        .widget-body {
            padding: 1.5rem;
        }

        /* === بطاقة الملف الشخصي العلوية === */
        .profile-widget {
            position: relative;
            text-align: center;
            padding-top: 40px; /* مساحة للخلفية العلوية */
            overflow: hidden;
        }

        .profile-bg {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 120px;
            background: linear-gradient(135deg, #1DC792 0%, #17A2B8 100%);
            border-radius: 12px 12px 0 0;
        }

        .profile-pic-lg {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #fff;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            margin-top: 45px; /* لسحبها للأسفل قليلاً */
            position: relative;
            z-index: 2;
        }

        .profile-info {
            padding: 1rem 1.5rem 1.5rem;
        }

            .profile-info h3 {
                font-weight: 700;
                color: #2c3e50;
                margin-top: 10px;
                margin-bottom: 5px;
            }

            .profile-info .qualification {
                color: #8492a6;
                font-weight: 500;
                margin-bottom: 15px;
            }

        .profile-contact {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

            .profile-contact a {
                color: #526484;
                font-size: 0.9rem;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .profile-contact a:hover {
                    color: #1DC792;
                }

            .profile-contact i {
                margin-right: 5px;
            }

        .profile-actions .btn {
            border-radius: 20px;
            padding: 8px 20px;
            font-weight: 600;
        }

        /* === قائمة المعلومات والتخصصات === */
        .info-list-styled {
            list-style: none;
            padding: 0;
        }

            .info-list-styled li {
                display: flex;
                align-items: flex-start;
                padding: 0.8rem 0;
                border-bottom: 1px solid #f1f1f1;
            }

                .info-list-styled li:last-child {
                    border-bottom: none;
                }

            .info-list-styled i {
                font-size: 1.2rem;
                color: #1DC792;
                width: 30px;
                margin-right: 15px;
                margin-top: 2px;
            }

            .info-list-styled .info-label {
                font-weight: 600;
                color: #526484;
                margin-bottom: 3px;
            }

            .info-list-styled .info-value {
                color: #2c3e50;
            }

        /* === بطاقات التخصصات === */
        .specializations-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .spec-badge {
            background-color: #e8f9f5;
            color: #1DC792;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
            font-size: 0.9rem;
            border: 1px solid #cceee4;
        }

        /* === قائمة الدورات (إذا وجدت) === */
        .course-taught-item {
            display: flex;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid #f1f1f1;
            transition: background-color 0.3s;
        }

            .course-taught-item:hover {
                background-color: #fcfcfc;
            }

            .course-taught-item:last-child {
                border-bottom: none;
            }

        .course-icon-container {
            width: 50px;
            height: 50px;
            background-color: #e8f9f5;
            color: #1DC792;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-right: 15px;
        }

        .course-taught-info h6 {
            margin-bottom: 2px;
            font-weight: 600;
        }

        .course-taught-info p {
            font-size: 0.85rem;
            color: #8492a6;
            margin: 0;
        }

        /* === الكود المُحسَّن لطباعة البطاقة === */
        .printable-card-area {
            display: none; /* إخفاء منطقة الطباعة في العرض العادي */
        }

        @@media print {
            /* 1. إخفاء كل شيء في الصفحة ما عدا منطقة الطباعة */
            body > *:not(.printable-card-area) {
                display: none !important;
            }
            /* 2. إظهار منطقة الطباعة وتجهيزها لتأخذ كامل المساحة */
            .printable-card-area {
                display: block !important;
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
            }
            /* 3. تصميم البطاقة نفسها للطباعة (هذا الجزء سليم لديك) */
            .trainer-print-card {
                width: 85mm;
                height: 55mm;
                border: 1px solid #ccc;
                border-radius: 5px;
                margin: 20mm auto; /* توسيط البطاقة في الصفحة */
                padding: 5mm;
                box-sizing: border-box;
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
                font-family: sans-serif;
                page-break-inside: avoid; /* مهم لمنع انقسام البطاقة بين صفحتين */
            }

                .trainer-print-card img {
                    width: 25mm;
                    height: 25mm;
                    border-radius: 50%;
                    object-fit: cover;
                    border: 1.5mm solid #eee;
                }

                .trainer-print-card h4 {
                    font-size: 11pt;
                    margin: 2mm 0 1mm 0;
                    color: #000;
                }

                .trainer-print-card p {
                    font-size: 8pt;
                    color: #444;
                    margin: 0.5mm 0;
                }

                .trainer-print-card .print-specs {
                    font-size: 7pt;
                    color: #666;
                    margin-top: 2mm;
                }
        }
    </style>
}

<section class="section py-5 main-content">
    <div class="container">
        <div class="row">
            <!-- ================= العمود الأيمن: بطاقة الملف الشخصي ================= -->
            <div class="col-lg-4 animate__animated animate__fadeInLeft">
                <div class="widget profile-widget">
                    <div class="profile-bg"></div>
                    <img src="@profileImageUrl" alt="صورة المدرب" class="profile-pic-lg"
                         onerror="this.onerror=null; this.src='@Url.Content("~/img/OIP.jpeg")';" />
                    <div class="profile-info">
                        <h3>@Model.ArName</h3>
                        <p class="qualification">@Model.Qualification?.Name</p>
                        <div class="profile-contact">
                            <a href="mailto:@Model.Email"><i class="icofont-email"></i> تواصل عبر البريد</a>
                            <a href="tel:@Model.PhoneNo"><i class="icofont-phone"></i> اتصال</a>
                        </div>
                        <div class="profile-actions">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn" style="background-color: #1DC792; color: #fff;">
                                <i class="icofont-edit"></i> تعديل
                            </a>
                            @if (!string.IsNullOrEmpty(Model.CVUrl))
                            {
                                <a href="@Url.Content("~/pictures/cvs/" + Model.CVUrl)" target="_blank" class="btn btn-outline-secondary">
                                    <i class="icofont-download"></i> السيرة الذاتية
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!-- widget: التخصصات -->
                <div class="widget">
                    <div class="widget-header">
                        <h5><i class="icofont-star me-2" style="color:#1DC792;"></i>التخصصات</h5>
                        <span class="badge bg-light text-dark">@specializations.Count</span>
                    </div>
                    @if (specializations.Any())
                    {
                        <div class="widget-body">
                            <div class="specializations-list">
                                @foreach (var spec in specializations)
                                {
                                    <span class="spec-badge">@spec</span>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="widget-body text-center text-muted">
                            <p>لم يتم تحديد تخصصات بعد.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- ================= العمود الأيسر: المعلومات التفصيلية ================= -->
            <div class="col-lg-8 animate__animated animate__fadeInRight">
                <!-- widget: المعلومات التفصيلية -->
                <div class="widget">
                    <div class="widget-header">
                        <h5><i class="icofont-user-alt-7 me-2" style="color:#1DC792;"></i>معلومات المدرب</h5>
                        <button onclick="printTrainerCard()" class="btn btn-sm btn-outline-primary"><i class="icofont-print"></i> طباعة بطاقة تعريفية</button>
                    </div>
                    <div class="widget-body">
                        <ul class="info-list-styled">
                            <li>
                                <i class="icofont-user"></i>
                                <div>
                                    <div class="info-label">الاسم بالإنجليزية</div>
                                    <div class="info-value">@(Model.EnName ?? "غير متوفر")</div>
                                </div>
                            </li>
                            <li>
                                <i class="icofont-finger-print"></i>
                                <div>
                                    <div class="info-label">الرقم الوطني</div>
                                    <div class="info-value">@(Model.NationalNo ?? "غير متوفر")</div>
                                </div>
                            </li>
                            <li>
                                <i class="icofont-building-alt"></i>
                                <div>
                                    <div class="info-label">جهة العمل</div>
                                    <div class="info-value">@(Model.Employer ?? "غير متوفر")</div>
                                </div>
                            </li>
                            <li>
                                <i class="icofont-ui-calendar"></i>
                                <div>
                                    <div class="info-label">تاريخ الانضمام</div>
                                    <div class="info-value">@Model.Created.ToString("dd MMMM, yyyy")</div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- widget: الدورات التي قدمها المدرب (مثال) -->
                <div class="widget">
                    <div class="widget-header">
                        <h5><i class="icofont-black-board me-2" style="color:#1DC792;"></i>الدورات التي قدمها</h5>
                    </div>
                    <div class="widget-body">
                        @*
                          هذا الجزء يعتمد على وجود قائمة بالدورات في الموديل الخاص بك
                          مثال: Model.CoursesTaught 
                          إذا لم يكن موجوداً، يمكنك إزالة هذا القسم أو عرض رسالة بديلة.
                        *@
                        @{
                            // مثال وهمي للبيانات - استبدله بالبيانات الحقيقية
                            var coursesTaught = new[] {
                                                new { Name = "مقدمة في البرمجة بلغة C#", Date = "مارس 2024", Location = "قاعة 1" },
                                                new { Name = "إدارة المشاريع الاحترافية PMP", Date = "فبراير 2024", Location = "عبر الإنترنت" },
                                                new { Name = "أساسيات تصميم قواعد البيانات", Date = "ديسمبر 2023", Location = "قاعة 3" }
                                                };
                        }

                        @if (coursesTaught.Any())
                        {
                            @foreach (var course in coursesTaught)
                            {
                                <div class="course-taught-item">
                                    <div class="course-icon-container">
                                        <i class="icofont-certificate-alt-1"></i>
                                    </div>
                                    <div class="course-taught-info">
                                        <h6><a href="#" class="text-dark text-decoration-none">@course.Name</a></h6>
                                        <p>@course.Date <span class="mx-2">|</span> <i class="icofont-location-pin"></i> @course.Location</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted p-4">
                                <i class="icofont-ban icofont-3x"></i>
                                <p class="mt-2">لم يقدم هذا المدرب أي دورات بعد.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ================= منطقة طباعة البطاقة التعريفية ================= -->
<div class="printable-card-area">
    <div class="trainer-print-card" id="trainerPrintCard">
        <img src="@profileImageUrl" alt="صورة المدرب" onerror="this.onerror=null; this.src='@Url.Content("~/img/OIP.jpeg")';" />
        <h4>@Model.ArName</h4>
        <p>@Model.Qualification?.Name</p>
        <p>@Model.Email</p>
        <p>@Model.PhoneNo</p>
        @if (specializations.Any())
        {
            <p class="print-specs">التخصصات: @string.Join(", ", specializations.Take(2))</p>
        }
    </div>
</div>

@section Scripts {
    <script>
        function printTrainerCard() {
            window.print();
        }
    </script>
}