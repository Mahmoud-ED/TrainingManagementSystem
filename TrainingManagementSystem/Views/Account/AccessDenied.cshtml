
<div class="container pt-5 mt-5">
    <div class="row">
        <div class="alert alert-danger shadow text-center">
            <h3>Access Denied</h3>
            <hr />
            @if (ViewBag.Message != null)
            {
                <p>@ViewBag.Message</p>
            }
            else
            {
                <p>You dont have permission to Access</p>
            }
        </div>
    </div>
</div>

