@model LoginVM
@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = null; // صفحة مستقلة
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@ViewData["Title"] - نظام إدارة التدريب</title>

    <!-- Favicon (استخدم أيقونتك الخاصة) -->
    <link rel="icon" href="~/img/favicon.png" /> <!-- تأكد من وجود هذا الملف أو غير المسار -->
    <!-- Google Fonts (من قالب Mediplus) -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet" />
    <!-- Cairo Font (إضافة الخط العربي إذا لم يكن Poppins يدعمه بشكل جيد كفاية) -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap" rel="stylesheet">


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <!-- icofont CSS -->
    <link rel="stylesheet" href="~/css/icofont.css" />
    <!-- Animate CSS (قد لا يكون ضروريًا لصفحة تسجيل الدخول) -->
    @*
    <link rel="stylesheet" href="~/css/animate.min.css" /> *@

    <!-- Mediplus Main CSS -->
    <link rel="stylesheet" href="~/css/normalize.css" />
    <link rel="stylesheet" href="~/style.css" /> <!-- ملف الستايل الرئيسي لـ Mediplus -->
    <link rel="stylesheet" href="~/css/responsive.css" />

    <!-- Color CSS (اختر اللون المناسب لموقعك أو أزل هذا إذا لم تكن تستخدم مغير الألوان) -->
    @*
    <link rel="stylesheet" href="~/css/color/color1.css" /> *@

    <link href="/css/Login.css" rel="stylesheet" />

</head>
<body class="rtl">
    <!-- Preloader (اختياري، إذا كان لديك الأصول وتريده) -->
    @*
    <div class="preloader">
        <div class="loader">
            <div class="loader-outter"></div>
            <div class="loader-inner"></div>
            <div class="indicator">
                <svg width="16px" height="12px">
                    <polyline id="back" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                    <polyline id="front" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                </svg>
            </div>
        </div>
    </div>
    *@
    <!-- End Preloader -->
    <!-- Shop Login -->
    <section class="login section">
        <div class="container">
            <div class="inner">
                <!-- Removed class login-form-only to show side-by-side -->
                <div class="row">
                    <div class="col-lg-6">
                        <div class="login-left">
                            <!-- يمكنك وضع صورة هنا، أو شعار، أو تركها فارغة بلون -->
                            <!-- مثال: <img src="~/img/your-login-graphic.svg" alt="نظام إدارة التدريب" style="max-width: 80%;" /> -->
                            <h3 style="color: #555; text-align:center; padding:20px;">مرحباً بك في<br />نظام إدارة التدريب</h3>
                        </div>
                    </div>
                    <div class="col-lg-6 login-form-wrapper">
                        <!-- Wrapper for better control if only form is shown -->
                        <div class="login-form">
                            <h2>تسجيل الدخول</h2>
                            <p>
                                ليس لديك حساب بعد؟
                                <a asp-controller="Account" asp-action="Register">سجل هنا</a>
                            </p>
                            <!-- Form -->
                            <form class="form" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            @* <label asp-for="Email" class="control-label">البريد الإلكتروني</label> *@
                                            <input asp-for="Email" class="form-control" placeholder="البريد الإلكتروني" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            @* <label asp-for="Password" class="control-label">كلمة المرور</label> *@
                                            <input asp-for="Password" class="form-control" placeholder="كلمة المرور" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group login-btn">
                                            <button class="btn" type="submit">دخــول</button>
                                        </div>
                                        <div class="checkbox">
                                            <label asp-for="RememberMe" class="checkbox-inline">
                                                <input asp-for="RememberMe" /> تذكرني
                                            </label>
                                        </div>
                                        <a asp-controller="Account" asp-action="ForgotPassword" class="lost-pass">هل نسيت كلمة المرور؟</a>
                                    </div>
                                </div>
                            </form>
                            <!--/ End Form -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/ End Login -->
    <!-- Scripts (من Mediplus - أضف فقط ما هو ضروري لصفحة تسجيل الدخول) -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <!-- قد تحتاج إلى main.js إذا كان يحتوي على تهيئة أساسية لبعض العناصر التي قد تستخدمها، ولكن غالبًا لا يكون ضروريًا لنموذج بسيط -->
    @*
    <script src="~/js/main.js"></script> *@

</body>
</html>