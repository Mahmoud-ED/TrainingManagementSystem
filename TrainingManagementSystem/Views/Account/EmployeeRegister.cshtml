@model EmployeeRegisterVM

@{
    ViewBag.Title = "Employee Register";
}

<div class="container mt-5 pt-3">
    <div class="row d-flex justify-content-center ">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header text-center border-bottom-0">
                    <h4><b>Employee Register</b></h4>
                </div>
                <div class="card-body text-black-50">
                    <form asp-action="EmployeeRegister">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- ApplcationUser -->
                        <h5 class="mt-4">User Information</h5>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterVM.Email" class="control-label"></label>
                            <input asp-for="@Model.RegisterVM.Email" class="form-control" />
                            <span asp-validation-for="@Model.RegisterVM.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterVM.Password" class="control-label"></label>
                            <input asp-for="@Model.RegisterVM.Password" class="form-control" />
                            <span asp-validation-for="@Model.RegisterVM.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterVM.ConfirmPassword" class="control-label"></label>
                            <input asp-for="@Model.RegisterVM.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="@Model.RegisterVM.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterVM.Age" class="control-label"></label>
                            <input asp-for="@Model.RegisterVM.Age" class="form-control" />
                            <span asp-validation-for="@Model.RegisterVM.Age" class="text-danger"></span>
                        </div>

                        <!-- Employee -->
                        <h5 class="mt-4">Employee Information</h5>
                        <div class="form-group">
                            <label asp-for="@Model.Employee.Name" class="control-label"></label>
                            <input asp-for="@Model.Employee.Name" class="form-control" />
                            <span asp-validation-for="@Model.Employee.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Employee.PhoneNumber" class="control-label"></label>
                            <input asp-for="@Model.Employee.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.Employee.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Employee.Address" class="control-label"></label>
                            <input asp-for="@Model.Employee.Address" class="form-control" />
                            <span asp-validation-for="@Model.Employee.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Employee.YearsOfExperience" class="control-label"></label>
                            <input asp-for="@Model.Employee.YearsOfExperience" class="form-control" />
                            <span asp-validation-for="@Model.Employee.YearsOfExperience" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Employee.Specialization" class="control-label"></label>
                            <input asp-for="@Model.Employee.Specialization" class="form-control" />
                            <span asp-validation-for="@Model.Employee.Specialization" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Employee.Bio" class="control-label"></label>
                            <textarea asp-for="@Model.Employee.Bio" class="form-control"></textarea>
                            <span asp-validation-for="@Model.Employee.Bio" class="text-danger"></span>
                        </div>

                        <div class="mt-5 mb-5 d-flex">
                            <input type="submit" class="btn btn-primary w-100" value="Register" />
                        </div>
                    </form>

                    <div class="mt-3">
                        <a asp-action="Register">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

