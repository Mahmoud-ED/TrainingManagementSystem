    @{
        // إذا كنت تستخدم _ValidationScriptsPartial وهو غير ضروري هنا، يمكنك إزالته
        // await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
          
        });
    </script>
}