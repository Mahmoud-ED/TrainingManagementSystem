@model IEnumerable<PlanCours>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>اسم البرنامج</th>
                <th>الموقع</th>
                <th>تاريخ البدء</th>
                <th>تاريخ الانتهاء</th>
                <th>المدة (ساعات)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Course.Name</td>
                    <td>@(item.Locations?.Name ?? "N/A")</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@(item.EndDate?.ToShortDateString() ?? "N/A")</td>
                    <td>@item.DurationHours</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">عرض</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="alert alert-info text-center">لا توجد بيانات للعرض في هذه السنة.</div>
}