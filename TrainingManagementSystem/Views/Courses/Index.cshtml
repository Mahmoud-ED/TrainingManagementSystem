@model CourseIndexViewModel
@{
    ViewData["Title"] = "قائمة الدورات التدريبية";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0">
        <a asp-action="Create" class="btn btn-lg btn-primary shadow-sm">
            <i class="fas fa-plus me-2"></i>إنشاء دورة جديدة
        </a>
    </p>
    @* يمكنك وضع زر لفتح/إخفاء الفلاتر هنا إذا أردت *@
</div>


@* عرض رسائل النجاح أو الخطأ *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@* قسم الفلترة والبحث - يمكن وضعه في Card أو Accordion لجعله قابلاً للطي *@
<div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0">
            <button class="btn btn-link text-decoration-none" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse" aria-expanded="true" aria-controls="filtersCollapse">
                <i class="fas fa-filter me-1"></i> خيارات البحث والفلترة
            </button>
        </h5>
    </div>
    <div id="filtersCollapse" class="collapse show">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-6 col-lg-4">
                        <label asp-for="SearchString" class="form-label">بحث بالاسم أو الرمز</label>
                        <input asp-for="SearchString" class="form-control" placeholder="اسم الدورة أو رمزها..." />
                    </div>
                    <div class="col-md-6 col-lg-2">
                        <label asp-for="SelectedCourseClassificationId" class="form-label">التصنيف</label>
                        <select asp-for="SelectedCourseClassificationId" asp-items="Model.CourseClassifications" class="form-select">
                            <option value="">-- الكل --</option>
                        </select>
                    </div>
                    <div class="col-md-6 col-lg-2">
                        <label asp-for="SelectedLevelId" class="form-label">المستوى</label>
                        <select asp-for="SelectedLevelId" asp-items="Model.Levels" class="form-select">
                            <option value="">-- الكل --</option>
                        </select>
                    </div>
                    <div class="col-md-6 col-lg-2">
                        <label asp-for="SelectedCourseParentId" class="form-label">الدورة المرجعية</label>
                        <select asp-for="SelectedCourseParentId" asp-items="Model.CourseParents" class="form-select">
                            <option value="">-- الكل --</option>
                        </select>
                    </div>
                    <div class="col-md-12 col-lg-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-info w-100">
                            <i class="fas fa-search me-1"></i> بحث
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@if (!Model.Courses.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>لا توجد نتائج</h4>
        <p>لا توجد دورات تطابق معايير البحث الحالية أو لم يتم إضافة دورات بعد.</p>
        <hr>
        <p class="mb-0">يمكنك <a asp-action="Create" class="alert-link">إنشاء دورة جديدة</a> أو تعديل معايير البحث.</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model.Courses)
        {
            <div class="col">
                <div class="card h-100 shadow-hover">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 text-primary">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none stretched-link">
                                @item.Name
                            </a>
                        </h5>
                        @if (!string.IsNullOrEmpty(item.Code))
                        {
                            <span class="badge bg-secondary">@item.Code</span>
                        }
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-3">
                            <li>
                                <i class="fas  fa-fw text-muted me-2"></i>
                                <strong>التصنيف:</strong> @(item.CourseClassificationName ?? "غير محدد")
                            </li>
                            <li>
                                <i class="fas  fa-fw text-muted me-2"></i>
                                <strong>المستوى:</strong> @(item.LevelName ?? "غير محدد")
                            </li>
                            @if (!string.IsNullOrEmpty(item.CourseParentName))
                            {
                                <li>
                                    <i class="fas fa-link fa-fw text-muted me-2"></i>
                                    <strong>مرجعية لـ:</strong> @item.CourseParentName
                                </li>
                            }
                        </ul>
                        <div class="d-flex justify-content-around text-center mb-3 small">
                            <div>
                                <i class="fas fa-calendar-alt fa-fw text-info me-1"></i> تفاصيل منفذة
                                <span class="d-block fw-bold fs-5">@item.CourseDetailsCount</span>
                            </div>
                            <div>
                                <i class="fas fa-chalkboard-teacher fa-fw text-success me-1"></i> مدربون معينون
                                <span class="d-block fw-bold fs-5">@item.TrainersCount</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light border-top-0 text-center">
                        <div class="btn-group w-100" role="group" aria-label="Course Actions">
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info flex-grow-1" title="تفاصيل">
                                <i class="fas fa-info-circle me-1"></i> تفاصيل
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary flex-grow-1" title="تعديل">
                                <i class="fas fa-edit me-1"></i> تعديل
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger flex-grow-1" title="حذف">
                                <i class="fas fa-trash-alt me-1"></i> حذف
                            </a>
                        </div>
                        <a asp-controller="CourseDetails" asp-action="Index" asp-route-courseId="@item.Id"
                           class="btn btn-sm btn-outline-secondary w-100 mt-2" title="إدارة تفاصيل الدورة">
                            <i class="fas fa-list-alt me-1"></i> إدارة تفاصيل التنفيذ
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @* قسم ترقيم الصفحات *@
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-searchString="@Model.SearchString"
                       asp-route-classificationId="@Model.SelectedCourseClassificationId"
                       asp-route-levelId="@Model.SelectedLevelId"
                       asp-route-parentId="@Model.SelectedCourseParentId"
                       aria-label="Previous">
                        <span aria-hidden="true">«</span>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    // منطق لعرض عدد محدود من أرقام الصفحات (مثلاً: 1 ... 5 6 7 ... 10)
                    // هذا مثال مبسط يعرض كل الصفحات
                    const int maxPagesToShow = 5;
                    const int halfMaxPages = maxPagesToShow / 2;
                    bool showPage = (i >= Model.PageIndex - halfMaxPages && i <= Model.PageIndex + halfMaxPages) ||
                    i == 1 || i == Model.TotalPages ||
                    (Model.PageIndex <= halfMaxPages + 1 && i <= maxPagesToShow) ||
                    (Model.PageIndex >= Model.TotalPages - halfMaxPages && i >= Model.TotalPages - maxPagesToShow + 1);

                    bool addEllipsisBefore = (i == 1 && Model.PageIndex > halfMaxPages + 2 && maxPagesToShow < Model.TotalPages);
                    bool addEllipsisAfter = (i == Model.TotalPages - 1 && Model.PageIndex < Model.TotalPages - halfMaxPages - 1 && maxPagesToShow < Model.TotalPages);


                    if (i == 2 && Model.PageIndex > halfMaxPages + 2 && Model.TotalPages > maxPagesToShow + 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }

                    if (showPage)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-pageNumber="@i"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-classificationId="@Model.SelectedCourseClassificationId"
                               asp-route-levelId="@Model.SelectedLevelId"
                               asp-route-parentId="@Model.SelectedCourseParentId">@i</a>
                        </li>
                    }
                    if (i == Model.TotalPages - 1 && Model.PageIndex < Model.TotalPages - halfMaxPages - 1 && Model.TotalPages > maxPagesToShow + 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-searchString="@Model.SearchString"
                       asp-route-classificationId="@Model.SelectedCourseClassificationId"
                       asp-route-levelId="@Model.SelectedLevelId"
                       asp-route-parentId="@Model.SelectedCourseParentId"
                       aria-label="Next">
                        <span aria-hidden="true">»</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
}

@section Styles {
    <style>
        .shadow-hover:hover {
            transition: box-shadow .3s ease-in-out;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        }
        .card-title a.stretched-link:hover {
            color: var(--bs-primary-dark) !important; /* Or your preferred hover color */
        }
         .card-title a.stretched-link {
            color: var(--bs-primary);
        }
    </style>
}