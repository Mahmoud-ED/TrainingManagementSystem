@model CreateCourseViewModel
@{
    ViewData["Title"] = "إنشاء تصنيف دورة";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
        }

        .page-header {
            background-color: #ffffff;
            padding: 1rem 1.5rem;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075);
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

            .page-header h3 {
                color: #0d6efd;
                margin: 0;
                font-weight: bold;
            }

        .form-panel {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .1);
            border: 1px solid #dee2e6;
            max-width: 900px;
            margin: auto;
        }

        .form-label i {
            color: #fd7e14;
            margin-inline-end: 0.5rem;
        }

        .btn-submit {
            background-color: #0d6efd;
            border-color: #0d6efd;
            font-weight: 600;
            padding: 0.6rem 2rem;
            font-size: 1rem;
            color: #fff;
        }

            .btn-submit:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
            }
    </style>
}

<div class="container-fluid mt-4 mb-5">
    <div class="page-header">
        <h3><i class="fas fa-plus-circle me-2"></i> @ViewData["Title"]</h3>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-arrow-left me-1"></i> العودة للقائمة
        </a>
    </div>

    <div class="form-panel">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"><i class="fas fa-signature"></i> اسم التصنيف</label>
                    <input asp-for="Name" class="form-control" placeholder="مثال: مقدمة في البرمجة" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Code" class="form-label"><i class="fas fa-barcode"></i> كود التصنيف</label>
                    <input asp-for="Code" class="form-control" placeholder="مثال: CS101" required />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DurationHours" class="form-label"><i class="fas fa-clock"></i> عدد الساعات</label>
                    <input asp-for="DurationHours" class="form-control" required />
                    <span asp-validation-for="DurationHours" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Days" class="form-label"><i class="fas fa-calendar-alt"></i> عدد الأيام</label>
                    <input asp-for="Days" class="form-control" required />
                    <span asp-validation-for="Days" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label"><i class="fas fa-align-left"></i> وصف التصنيف</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="اكتب وصفاً موجزاً..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CourseClassificationId" class="form-label"><i class="fas fa-sitemap"></i> محور التصنيف</label>
                    <select asp-for="CourseClassificationId" class="form-select select2-filter" asp-items="Model.CourseClassifications" required>
                        <option value="">اختر...</option>
                    </select>
                    <span asp-validation-for="CourseClassificationId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LevelId" class="form-label"><i class="fas fa-layer-group"></i> مستوى التصنيف</label>
                    <select asp-for="LevelId" class="form-select select2-filter" asp-items="Model.Levels" required>
                        <option value="">اختر...</option>
                    </select>
                    <span asp-validation-for="LevelId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CourseParentId" class="form-label"><i class="fas fa-link"></i> دورة مرجعية (اختياري)</label>
                    <select asp-for="CourseParentId" class="form-select select2-filter" asp-items="Model.ParentCourses">
                        <option value="">اختر...</option>
                    </select>
                    <span asp-validation-for="CourseParentId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SelectedTrainerIds" class="form-label"><i class="fas fa-users"></i> المدربون</label>
                    <select asp-for="SelectedTrainerIds" class="form-select select2-filter" asp-items="Model.AllTrainers" multiple>
                    </select>
                    <span asp-validation-for="SelectedTrainerIds" class="text-danger small"></span>
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-primary btn-submit">
                    <i class="fas fa-save me-2"></i> إنشاء التصنيف
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2-filter').select2({
                theme: 'bootstrap-5',
                dir: 'rtl',
                width: '100%',
                placeholder: 'اختر...',
                allowClear: true,
                language: 'ar'
            });
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
