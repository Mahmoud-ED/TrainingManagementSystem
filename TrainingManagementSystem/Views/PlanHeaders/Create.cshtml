@model PlanHeader

@{
    ViewData["Title"] = "إنشاء خطة تدريبية جديدة";
}

<section class="appointment single-page section">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-md-12 col-12 mx-auto">
                <div class="appointment-inner">
                    <div class="title text-center mb-4">
                        <h3><i class="fas fa-calendar-check me-2"></i> @ViewData["Title"]</h3>
                        <p>يرجى ملء جميع الحقول المطلوبة بعناية.</p>
                    </div>

                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="form">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center p-2 mb-3" role="alert"></div>

                        <!-- المعلومات الأساسية -->
                        <h5 class="form-section-title">المعلومات الأساسية للخطة</h5>
                        <hr class="mt-1 mb-3">

                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label">اسم الخطة التدريبية</label>
                                    <input asp-for="Name" class="form-control" placeholder="اسم الخطة التدريبية" />
                                    <span asp-validation-for="Name" class="text-danger d-block mt-1 small"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Year" class="form-label">السنة</label>
                                    <input asp-for="Year" type="number" class="form-control" min="2020" max="2050" placeholder="السنة" />
                                    <span asp-validation-for="Year" class="text-danger d-block mt-1 small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Quarter" class="form-label">الربع</label>
                                    <select asp-for="Quarter" class="form-control">
                                        <option value="">-- اختر الربع --</option>
                                        <option value="الربع الاول">الربع الاول</option>
                                        <option value="الربع التاني">الربع التاني</option>
                                        <option value="الربع التالت">الربع التالت</option>
                                        <option value="الربع الرابع">الربع الرابع</option>
                                    </select>
                                    <span asp-validation-for="Quarter" class="text-danger d-block mt-1 small"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="form-section-title mt-4">تواريخ الخطة التدريبية</h5>
                        <hr class="mt-1 mb-3">

                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="DateFrom" class="form-label">تاريخ البدء</label>
                                    <input asp-for="DateFrom" type="date" class="form-control" />
                                    <span asp-validation-for="DateFrom" class="text-danger d-block mt-1 small"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="DateTo" class="form-label">تاريخ الانتهاء</label>
                                    <input asp-for="DateTo" type="date" class="form-control" />
                                    <span asp-validation-for="DateTo" class="text-danger d-block mt-1 small"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="form-section-title mt-4">الملفات المرفقة</h5>
                        <hr class="mt-1 mb-3">

                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="ApprovalFile" class="form-label">ملف الموافقة</label>
                                    <input asp-for="ApprovalFile" type="file" class="form-control" />
                                    <span asp-validation-for="ApprovalFile" class="text-danger d-block mt-1 small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="form-group">
                                    <div class="button d-flex justify-content-center gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save"></i> حفظ الخطة التدريبية
                                        </button>
                                        <a asp-action="Index" class="btn btn-secondary">
                                            <i class="fas fa-times-circle"></i> إلغاء
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
