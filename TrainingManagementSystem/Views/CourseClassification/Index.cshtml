@model IEnumerable<CourseClassification>

@{
    ViewData["Title"] = "قائمة تصنيفات الدورات التدريبية";
}




<div class="breadcrumbs overlay">
    <div class="container">
        <div class="bread-inner">
            <div class="row">
                <div class="col-12">
                    <h2>@ViewData["Title"]</h2>
                    <ul class="bread-list">
                        <li><a href="index.html">لوحة التحكم</a></li>
                        <li><i class="icofont-simple-right"></i></li>
                        <li class="active">تصنيفات البرامج التدريبية</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>





<section class="doctor-calendar-area section">
    <div class="container">
       @*  <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>@ViewData["Title"]</h2>
                </div>
            </div>
        </div> *@

     

        @await Component.InvokeAsync("CreateCourseClassification")


        <div class="row">
            <div class="col-12">
                <div class="doctor-calendar-table table-responsive">
                    @if (Model.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ت</th>
                                    <th>التصنيف</th>
                                    <th>الدورات التدريبية</th>
                                    <th>تاريخ الانشاء</th>
                                    <th>تاريخ التعديل</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                    foreach (var item in Model)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Courses.Count)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Created)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Modified)</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">تعديل</a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">تفاصيل</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-header">
                                لا توجد تصنيفات
                            </div>
                            <div class="card-body">
                                <a asp-controller="CourseClassification" asp-action="Create" class="btn btn-primary">إنشاء تصنيف</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
