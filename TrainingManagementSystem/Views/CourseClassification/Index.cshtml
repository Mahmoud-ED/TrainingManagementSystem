@model IEnumerable<CourseClassification>

@{
    ViewData["Title"] = "قائمة تصنيفات الدورات التدريبية";
}

<section class="doctor-calendar-area section">
    <div class="container">
       @*  <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>@ViewData["Title"]</h2>
                </div>
            </div>
        </div> *@

        @await Component.InvokeAsync("CreateCourseClassification")

        <div class="row">
            <div class="col-12">
                <div class="doctor-calendar-table table-responsive">
                    @if (Model.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ت</th>
                                    <th>التصنيف</th>
                                    <th>الدورات التدريبية</th>
                                    <th>تاريخ الانشاء</th>
                                    <th>تاريخ التعديل</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                    foreach (var item in Model)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Courses.Count)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Created)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Modified)</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">تعديل</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-light text-center mt-3" role="alert">
                            <i class="icofont-info-square"></i> لا توجد تصنيفات لعرضها حاليًا. يمكنك <a asp-action="Create" class="alert-link">إضافة تصنيف جديد</a>.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
