@model CourseDetailsIndexViewModel

@{
    ViewData["Title"] = "البرامج التدريبية";

    // --- لم نعد بحاجة لهذه الحسابات هنا، تم نقلها للكونترولر ---
    // تم الإبقاء على الدوال المساعدة فقط

    // Helper function to get a sortable value for status names
    int GetStatusOrderValue(string statusName, List<string> order)
    {
        int index = order.IndexOf(statusName);
        return index == -1 ? order.Count : index;
    }
}

@functions {
    string GetStatusBadgeClass(string statusName)
    {
        if (string.IsNullOrEmpty(statusName)) return "secondary";
        switch (statusName.ToLower())
        {
            case "CLose": return "success";
            case "Next": return "info";
            case "Open": return "primary";
            case "Cansel": return "danger";
            case "مؤجلة": return "warning";
            default: return "secondary";
        }
    }
}


<style>
    /* Style for the statistics cards */
    .stat-card {
        background-color: #ffffff; /* White background */
        border: 1px solid #e9ecef; /* Light grey border */
        border-radius: 0.5rem; /* Slightly rounded corners */
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
        }

        /* Style for the title inside the card */
        .stat-card .card-title {
            color: #6c757d; /* Muted text color for the title */
            font-weight: 500;
            font-size: 0.95rem;
        }

    /* The red circle for the number */
    .stat-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%; /* This makes it a circle */
        background-color: #dc3545; /* Bootstrap's standard danger red */
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 2rem;
        font-weight: bold;
        flex-shrink: 0; /* Prevents the circle from shrinking on small screens */
    }

    /* Style for the icon next to the title */
    .stat-icon {
        font-size: 1.2rem;
    }
</style>
<div class="container-fluid mt-4">
    <!-- ======================= قسم التقرير والإحصائيات ======================= -->
    <div class="row g-4 mb-4">

        <!-- Card: دورات جارية -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">
                            <i class="fas fa-play-circle text-primary me-2 stat-icon"></i>
                            دورات جارية
                        </h5>
                    </div>
                    <div class="stat-circle">
                        @Model.ActiveCoursesCount
                    </div>
                </div>
            </div>
        </div>

        <!-- Card: دورات مكتملة -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">
                            <i class="fas fa-check-circle text-success me-2 stat-icon"></i>
                            دورات مكتملة
                        </h5>
                    </div>
                    <div class="stat-circle" style="background-color: #198754;">
                        <!-- Bootstrap Success Green -->
                        @Model.CompletedCoursesCount
                    </div>
                </div>
            </div>
        </div>

        <!-- Card: دورات قادمة -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">
                            <i class="fas fa-hourglass-start text-info me-2 stat-icon"></i>
                            دورات قادمة
                        </h5>
                    </div>
                    <div class="stat-circle" style="background-color: #0dcaf0;">
                        <!-- Bootstrap Info Blue -->
                        @Model.UpcomingCoursesCount
                    </div>
                </div>
            </div>
        </div>

        <!-- Card: أقرب دورة قادمة (تصميم خاص) -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-2">
                        <i class="fas fa-star text-warning me-2 stat-icon"></i>
                        أقرب دورة قادمة
                    </h5>
                    @if (Model.NextUpcomingCourse != null)
                    {
                        <h6 class="card-text fw-bold text-dark mb-1">@Model.NextUpcomingCourse.Course.Name</h6>
                        <small class="text-muted">تبدأ في: @Model.NextUpcomingCourse.StartDate.ToString("yyyy/MM/dd")</small>
                    }
                    else
                    {
                        <p class="card-text text-muted fst-italic mt-3">لا توجد دورات قادمة حالياً</p>
                    }
                </div>
            </div>
        </div>

    </div>
    <h1 class="h3"><i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> إضافة برنامج تدريبي
    </a>
    <!-- ======================= قسم الجداول ======================= -->
    <div class="d-flex  border-bottom">

        @if (!Model.CourseDetailsList.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">لا توجد برامج تدريبية!</h4>
            <p>يمكنك <a asp-action="Create" class="alert-link">إضافة برنامج تدريبي</a> للبدء.</p>
        </div>
    }
    else
    {
        {
            var statusOrder = new List<string> { "Open", "Next", "Close", "مؤجلة", "Cansel", "غير محددة" };
            var sortedGroups = Model.CourseDetailsList
                .GroupBy(cd => cd.Status?.Name ?? "غير محددة")
                .Select(g => new { StatusName = g.Key, Items = g.ToList() })
                .OrderBy(g => GetStatusOrderValue(g.StatusName, statusOrder))
                .ToList();

        foreach (var group in sortedGroups)
        {
            if (!group.Items.Any()) continue;

            <div class="card shadow-sm mb-4 mb-5">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <span class="badge bg-@(GetStatusBadgeClass(group.StatusName)) me-2 p-2">@group.StatusName</span>
                        <span class="badge bg-secondary rounded-pill">@group.Items.Count()</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                             <thead class="table-light">
                                <tr>
                                    <th>الدورة</th>
                                    <th>المدة (ساعة)</th>
                                    <th>تاريخ البدء</th>
                                    <th>تاريخ الانتهاء</th>
                                    <th>الموقع</th>
                                    <th>نوع الدورة</th>
                                    <th class="text-center">المسجلون</th>
                                    <th class="text-center">الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in group.Items)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Course != null)
                                            {
                                                <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseId" title="@item.Course.Name">
                                                    @item.Course.Name
                                                </a>
                                            }
                                        </td>
                                        <td>@item.DurationHours</td>
                                        <td>@item.StartDate.ToString("yyyy/MM/dd")</td>
                                        <td>
                                            @(item.EndDate.HasValue ? item.EndDate.Value.ToString("yyyy/MM/dd") : "لم يحدد")
                                        </td>
                                        <td>@(item.Location?.Name ?? "N/A")</td>
                                        <td>@(item.CourseType?.Name ?? "N/A")</td>
                                        <td class="text-center">
                                            <span class="badge bg-dark rounded-pill" title="عدد المسجلين">@(item.CourseTrainees?.Count ?? 0) / @item.Numberoftargets </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="تفاصيل"><i class="fas fa-eye"></i></a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="تعديل"><i class="fas fa-edit"></i></a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger delete-item" title="حذف"><i class="fas fa-trash-alt"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        }
    }
</div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        // Delete confirmation script from your original code
        $(document).ready(function () {
            $('.delete-item').on('click', function (e) {
                e.preventDefault();
                var deleteUrl = $(this).attr('href');
                if (confirm('هل أنت متأكد أنك تريد حذف هذا الموعد؟')) {
                    window.location.href = deleteUrl;
                }
            });
        });
    </script>
}