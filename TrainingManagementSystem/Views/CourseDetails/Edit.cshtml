@model TrainingManagementSystem.Models.Entities.CourseDetails

@{
    ViewData["Title"] = "تعديل تفاصيل الدورة";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary bg-gradient text-white">
            <h3 class="mb-0">
                <i class="fas fa-edit me-2"></i>@ViewData["Title"]
            </h3>
        </div>
        <form asp-action="Edit" novalidate>
            <div class="card-body p-4">

                @* لإظهار أخطاء التحقق العامة *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                @* حقل مخفي لحفظ الـ ID *@
                <input type="hidden" asp-for="Id" />
              
                <input type="hidden" asp-for="CourseId" />

                <div class="row g-4">
                    <!-- ========== العمود الأول ========== -->
                    <div class="col-md-6">
                        <h5 class="mb-3 text-secondary">البيانات الأساسية</h5>

                       

                        <div class="form-floating mb-3">
                            <input asp-for="DurationHours" class="form-control"  />
                            <label asp-for="DurationHours"></label>
                            <span asp-validation-for="DurationHours" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="StartDate" class="form-control" placeholder="تاريخ البدء" />
                            <label asp-for="StartDate"></label>
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="EndDate" class="form-control" placeholder="تاريخ الانتهاء" />
                            <label asp-for="EndDate"></label>
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- ========== العمود الثاني ========== -->
                    <div class="col-md-6">
                        <h5 class="mb-3 text-secondary">التصنيف والتفاصيل</h5>

                        <div class="form-floating mb-3">
                            <select asp-for="LocationId" class="form-select" asp-items="ViewBag.LocationId">
                                <option value="" disabled>-- اختر الموقع --</option>
                            </select>
                            <label asp-for="LocationId"></label>
                            <span asp-validation-for="LocationId" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="CourseTypeId" class="form-select" asp-items="ViewBag.CourseTypeId">
                                <option value="" disabled>-- اختر نوع الدورة --</option>
                            </select>
                            <label asp-for="CourseTypeId"></label>
                            <span asp-validation-for="CourseTypeId" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="StatusId" class="form-select" asp-items="ViewBag.StatusId">
                                <option value="" disabled>-- اختر الحالة --</option>
                            </select>
                            <label asp-for="StatusId"></label>
                            <span asp-validation-for="StatusId" class="text-danger small"></span>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end border-0 pt-3 pb-3">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-save me-2"></i>حفظ التعديلات
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-times me-2"></i>إلغاء
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}