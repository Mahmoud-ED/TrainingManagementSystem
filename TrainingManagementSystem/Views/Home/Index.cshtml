            float: right; /* لترتيب الراديو/التشيك بوكس صحيح في RTL */
            margin-left: 0.5em; /* بدل margin-right */
            margin-right: 0;
        }

        .input-group-outline .form-label {
            right: 0.75rem; /* ليتناسب مع RTL */
            left: auto;
            transform-origin: right center !important;
        }

        .input-group.input-group-outline.is-focused .form-label,
        .input-group.input-group-outline.is-filled .form-label {
            transform: translateY(-125%) translateX(-10%) scale(.8) !important; /* تعديل حركة الليبل */
        }

