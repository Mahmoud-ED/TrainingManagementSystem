        }

        .end-0 {
            left: 0 !important;
            right: unset !important;
        }

        .text-lg-start {
            text-align: right !important;
        }
        /* تأكد أن أيقونات FontAwesome تظهر بشكل صحيح في RTL إذا كانت تستخدم float أو text-align */
        .fa-key, .fa-user, .fa-chart-pie, .fa-user-circle {
