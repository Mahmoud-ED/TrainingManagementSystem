@model IEnumerable<TrainingManagementSystem.Models.Entities.Organizition>

@{
    ViewData["Title"] = "قائمة الجهات";
}

<div class="card shadow-lg border-0 rounded-lg mt-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-sitemap me-2"></i>@ViewData["Title"]</h3>
        <a asp-action="Create" class="btn btn-light">
            <i class="fas fa-plus me-1"></i> إضافة جهة جديدة
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>اسم الجهة</th>
                        <th>رمز الجهة</th>
                        <th>الفئة</th>
                        <th>اسم المسؤول</th>
                        <th>رقم الهاتف</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Category.Name)</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.NUM)</span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.ChiefName)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNo)</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="تعديل"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="تفاصيل"><i class="fas fa-info-circle"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="حذف"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>