@model IEnumerable<TrainingManagementSystem.Models.Entities.Organizition>

@{
    ViewData["Title"] = "إدارة الجهات";
}

@section Styles {
    <style>
        .table > thead > tr > th {
            background-color: #343a40;
            color: #fff;
            text-align: center;
        }

        .group-header th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6 !important;
            border-top: 2px solid #dee2e6 !important;
            font-weight: 600;
        }

        .group-header a {
            text-decoration: none;
            color: #0d6efd;
        }

        .table td {
            vertical-align: middle;
        }

        .actions-cell {
            width: 1%;
            white-space: nowrap;
        }
    </style>
}

<div class="container-fluid mt-4 mb-5">
    <div class="page-header mb-3 d-flex justify-content-between align-items-center flex-wrap pb-2 border-bottom">
        <h3><i class="fas fa-sitemap me-2"></i> @ViewData["Title"]</h3>
        <a asp-action="Create" class="btn btn-primary mt-2 mt-md-0">
            <i class="fas fa-plus me-1"></i> إضافة جهة جديدة
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive mt-3 shadow-sm rounded">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>اسم الجهة</th>
                        <th>رمز الجهة</th>
                        <th>الفئة</th>
                        <th>اسم المسؤول</th>
                        <th>رقم الهاتف</th>
                        <th class="actions-cell">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderBy(o => o.Category?.Name).ThenBy(o => o.Name))
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.NUM)</td>
                            <td class="text-center">
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Category.Name)</span>
                            </td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.ChiefName)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.PhoneNo)</td>
                            <td class="text-center actions-cell">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="تفاصيل"><i class="fas fa-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="تعديل"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="حذف"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            لا توجد جهات مسجلة حالياً.
        </div>
    }
</div>
