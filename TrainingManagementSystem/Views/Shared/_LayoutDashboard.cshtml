@inject IUnitOfWork<SiteInfo> _siteInfo

<!DOCTYPE html>
<html lang="ar">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @{
        var siteInfo = _siteInfo.Entity.GetAll().SingleOrDefault();
        ViewBag.SiteName = siteInfo?.Name;
        ViewBag.LogoUrl = siteInfo?.LogoUrl;
    }
    <partial name="Partial/_title" />

    <!-- Google Fonts: Cairo -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet" />

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/nice-select.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/icofont.css" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/css/owl-carousel.css" />
    <link rel="stylesheet" href="~/css/datepicker.css" />
    <link rel="stylesheet" href="~/css/animate.min.css" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/css/normalize.css" />
    <link rel="stylesheet" href="~/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link rel="stylesheet" href="~/css/color/color1.css" />

    <style>
        body {
            font-family: 'Cairo', sans-serif !important;
        }

        .breadcrumbs {
            padding: 20px 0;
            font-size: 14px;
        }

            .breadcrumbs h2 {
                font-size: 18px;
                margin-bottom: 10px;
            }

        .bread-list {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            font-size: 13px;
        }

            .bread-list li {
                margin: 0;
                padding: 0 5px;
            }


        .main-menu .nav.menu {
            display: flex !important;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start; /* أو center إذا أردت توسط القائمة */
            gap: 5px; /* تقليل المسافة بين عناصر القائمة الرئيسية */
            padding: 0;
            margin: 0;
        }

            .main-menu .nav.menu li {
                list-style: none;
                position: relative; /* مهم للقوائم المنسدلة */
            }

                /* تنسيق الرابط الرئيسي للقائمة المنسدلة */
                .main-menu .nav.menu li.dropdown > a.dropdown-toggle::after {
                    display: inline-block;
                    margin-left: .255em;
                    vertical-align: .255em;
                    content: "";
                    border-top: .3em solid;
                    border-right: .3em solid transparent;
                    border-bottom: 0;
                    border-left: .3em solid transparent;
                }

            .main-menu .nav.menu a,
            .main-menu .nav.menu .dropdown-toggle { /* إضافة dropdown-toggle هنا */
                text-decoration: none;
                color: #333; /* لون النص الافتراضي */
                padding: 10px 12px; /* تعديل الحشوة قليلاً */
                border-radius: 5px;
                display: inline-block;
                transition: background-color 0.3s, color 0.3s;
            }

                .main-menu .nav.menu a:hover,
                .main-menu .nav.menu .dropdown-toggle:hover {
                    background-color: #f0f0f0; /* لون الخلفية عند المرور */
                    color: #007bff; /* لون النص عند المرور */
                }

        /* تنسيقات القائمة المنسدلة */
        .main-menu .dropdown-menu {
            font-family: 'Cairo', sans-serif; /* ضمان استخدام نفس الخط */
            border-radius: 5px;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
            border: 1px solid rgba(0,0,0,.1);
            padding: .5rem 0;
            min-width: 200px; /* تحديد عرض أدنى للقائمة المنسدلة */
        }

        .main-menu .dropdown-item {
            padding: .5rem 1rem; /* حشوة عناصر القائمة المنسدلة */
            color: #333;
            font-size: 14px; /* حجم خط عناصر القائمة المنسدلة */
        }

            .main-menu .dropdown-item:hover {
                background-color: #007bff; /* لون خلفية العنصر عند المرور */
                color: #fff; /* لون نص العنصر عند المرور */
            }
        /* لإظهار القائمة المنسدلة عند المرور (اختياري، Bootstrap يتطلب نقرة افتراضياً) */
        /*
                .main-menu .nav.menu li.dropdown:hover > .dropdown-menu {
                    display: block;
                }
                */

    </style>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/LayoutAjaxApp1.styles.css" asp-append-version="true" />
    <!---------------Loader Overlay css-------------------->
    <link href="~/css/loader.css" rel="stylesheet" />
    <!----------------------------------------------------->
</head>

<body class="rtl">
    <header class="header">
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-5 col-12">
                        @* يمكنك وضع عناصر هنا مثل معلومات الاتصال أو روابط تسجيل الدخول *@
                    </div>
                </div>
            </div>
        </div>

        <div class="header-inner">
            <div class="container">
                <div class="inner">
                    <div class="row align-items-center">
                        <div class="col-lg-3 col-md-3 col-12">
                            <div class="logo">
                                <a href="/">
                                    <img src="@(ViewBag.LogoUrl ?? "~/img/oo.png")" alt="Logo @ViewBag.SiteName" style="max-height: 50px;" /> @* استخدام الشعار من ViewBag وتحجيمه *@
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-9 col-12">
                            <div class="main-menu">
                                <nav class="navigation">
                                    <ul class="nav menu">
                                        <li><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>

                                        @* قائمة التحكم *@
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" id="controlDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-cogs me-1"></i> التحكم
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="controlDropdown">
                                                <li><a class="dropdown-item" asp-controller="Courses" asp-action="Index">الكورسات</a></li>
                                                <li><a class="dropdown-item" asp-controller="Trainer" asp-action="Index">المدربين</a></li>
                                                <li><a class="dropdown-item" asp-controller="Trainee" asp-action="Index">المتدربين</a></li>
                                            </ul>
                                        </li>

                                        @* قائمة الإعدادات *@
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" id="settingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-tools me-1"></i> الإعدادات
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="settingsDropdown">
                                                <li><a class="dropdown-item" asp-controller="Department" asp-action="Index">الأقسام</a></li>
                                                <li><a class="dropdown-item" asp-controller="Qualification" asp-action="Index">المؤهلات</a></li>
                                                <li><a class="dropdown-item" asp-controller="Specialization" asp-action="Index">التخصصات</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="CourseClassification" asp-action="Index">تصنيفات الدورات</a></li>
                                                <li><a class="dropdown-item" asp-controller="Level" asp-action="Index">المستويات (Level)</a></li>
                                            </ul>
                                        </li>

                                        @* يمكنك إضافة المزيد من العناصر هنا إذا لزم الأمر *@
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="breadcrumbs overlay">
        <div class="container">
            <div class="bread-inner">
                <div class="row">
                    <div class="col-12">
                        <h2>@ViewData["Title"]</h2>
                        <ul class="bread-list">
                            <li><a asp-controller="Home" asp-action="Index"> <i class="fas fa-tachometer-alt"></i> لوحة التحكم</a></li>
                            <li><i class="icofont-simple-left"></i></li>
                            <li class="active">@BreadcrumbHelper.GetControllerDisplayName(ViewContext)</li>
                            @if (BreadcrumbHelper.GetActionDisplayName(ViewContext) != "Index" &&
                                                        BreadcrumbHelper.GetActionDisplayName(ViewContext) != BreadcrumbHelper.GetControllerDisplayName(ViewContext)) // لتجنب التكرار
                            {
                                <li><i class="icofont-simple-left"></i></li>
                                <li class="active">@BreadcrumbHelper.GetActionDisplayName(ViewContext)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mb-md-5 pt-5">
        @RenderBody()
    </div>

    <partial name="Partial/_footer" />

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script src="~/js/jquery-migrate.js"></script> <!-- للمساعدة في توافق الإضافات القديمة -->
    @* سكربتات الإضافات التي تعتمد على jQuery *@
    <script src="~/js/easing.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/jquery.nav.js"></script>
    <script src="~/js/slicknav.min.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/niceselect.js"></script>
    <script src="~/js/tilt.jquery.min.js"></script>
    <script src="~/js/owl-carousel.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/steller.js"></script> @* تأكد أن هذا الملف موجود وسليم *@
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>

    <!--------------------SPA AJAX------------------------->
    <script src="~/js/layoutAjax-spa.js" asp-append-version="true"></script>

    @* main.js يجب أن يكون من بين آخر السكربتات لأنه قد يقوم بتهيئة الإضافات المذكورة أعلاه *@
    <script src="~/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>