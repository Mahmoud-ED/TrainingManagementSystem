@inject IUnitOfWork<SiteInfo> _siteInfo

<!DOCTYPE html>
<html lang="ar">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @{
        var siteInfo = _siteInfo.Entity.GetAll().SingleOrDefault();
        ViewBag.SiteName = siteInfo?.Name;
        ViewBag.LogoUrl = siteInfo?.LogoUrl;
    }
    <partial name="Partial/_title" />

    <!-- Google Fonts: Cairo -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet" />

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/nice-select.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/icofont.css" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/css/owl-carousel.css" />
    <link rel="stylesheet" href="~/css/datepicker.css" />
    <link rel="stylesheet" href="~/css/animate.min.css" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/css/normalize.css" />
    <link rel="stylesheet" href="~/style.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <link rel="stylesheet" href="~/css/color/color1.css" />

    <style>
        body {
            font-family: 'Cairo', sans-serif !important;
        }

        .main-menu .nav.menu {
            display: flex !important;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start;
            gap: 15px;
            padding: 0;
            margin: 0;
        }

            .main-menu .nav.menu li {
                list-style: none;
            }

            .main-menu .nav.menu a {
                text-decoration: none;
                color: #333;
                padding: 10px 15px;
                border-radius: 5px;
                display: inline-block;
                transition: 0.3s;
            }

                .main-menu .nav.menu a:hover {
                    background-color: #f0f0f0;
                    color: #007bff;
                }

    </style>
    @RenderSection("Styles", required: false)

</head>

<body class="rtl">
    <header class="header">
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-5 col-12">
                    </div>
                </div>
            </div>
        </div>

        <div class="header-inner">
            <div class="container">
                <div class="inner">
                    <div class="row align-items-center">
                        <div class="col-lg-3 col-md-3 col-12">
                            <div class="logo">
                                <a href="/">
                                    <img src="~/img/oo.png" alt="Logo" />
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-9 col-12">
                            <div class="main-menu">
                                <nav class="navigation">
                                    <ul class="nav menu">
                                        <li><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                                        <li><a asp-controller="Trainer" asp-action="Index">المدربين</a></li>
                                        <li><a asp-controller="Trainee" asp-action="Index">المتدربين</a></li>
                                        <li><a asp-controller="Qualification" asp-action="Index">المؤهلات</a></li>
                                        <li><a asp-controller="Specialization" asp-action="Index">التخصصات</a></li>
                                        <li><a asp-controller="Department" asp-action="Index">الأقسام</a></li>
                                        <li><a asp-controller="CourseClassification" asp-action="Index">تصنيفات الدورات</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="breadcrumbs overlay">
        <div class="container">
            <div class="bread-inner">
                <div class="row">
                    <div class="col-12">
                        <h2>@ViewData["Title"]</h2>
                        <ul class="bread-list">
                            <li>لوحة التحكم</li>
                            <li><i class="icofont-simple-left"></i></li>
                            <li class="active">@BreadcrumbHelper.GetControllerDisplayName(ViewContext)</li>
                            <li><i class="icofont-simple-left"></i></li>
                            <li class="active">@BreadcrumbHelper.GetActionDisplayName(ViewContext)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mb-md-5 pt-5">
        @RenderBody()
    </div>

    <partial name="Partial/_footer" />

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-migrate.js"></script>
    <script src="~/js/easing.js"></script>
    <script src="~/js/colors.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/jquery.nav.js"></script>
    <script src="~/js/slicknav.min.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/niceselect.js"></script>
    <script src="~/js/tilt.jquery.min.js"></script>
    <script src="~/js/owl-carousel.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/steller.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/main.js"></script>
</body>

</html>
