    <style>
        body {
            font-family: 'Cairo', sans-serif !important;
        }

        .breadcrumbs {
            padding: 20px 0;
            font-size: 14px;
        }

            .breadcrumbs h2 {
                font-size: 18px;
                margin-bottom: 10px;
            }

        .bread-list {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            font-size: 13px;
        }

            .bread-list li {
                margin: 0;
                padding: 0 5px;
            }


        .main-menu .nav.menu {
            display: flex !important;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start; /* أو center إذا أردت توسط القائمة */
            gap: 5px; /* تقليل المسافة بين عناصر القائمة الرئيسية */
            padding: 0;
            margin: 0;
        }

            .main-menu .nav.menu li {
                list-style: none;
                position: relative; /* مهم للقوائم المنسدلة */
            }

                /* تنسيق الرابط الرئيسي للقائمة المنسدلة */
                .main-menu .nav.menu li.dropdown > a.dropdown-toggle::after {
                    display: inline-block;
                    margin-left: .255em;
                    vertical-align: .255em;
                    content: "";
                    border-top: .3em solid;
                    border-right: .3em solid transparent;
                    border-bottom: 0;
                    border-left: .3em solid transparent;
                }

            .main-menu .nav.menu a,
            .main-menu .nav.menu .dropdown-toggle { /* إضافة dropdown-toggle هنا */
                text-decoration: none;
                color: #333; /* لون النص الافتراضي */
                padding: 10px 12px; /* تعديل الحشوة قليلاً */
                border-radius: 5px;
                display: inline-block;
                transition: background-color 0.3s, color 0.3s;
            }

                .main-menu .nav.menu a:hover,
                .main-menu .nav.menu .dropdown-toggle:hover {
                    background-color: #f0f0f0; /* لون الخلفية عند المرور */
                    color: #007bff; /* لون النص عند المرور */
                }

        /* تنسيقات القائمة المنسدلة */
        .main-menu .dropdown-menu {
            font-family: 'Cairo', sans-serif; /* ضمان استخدام نفس الخط */
            border-radius: 5px;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
            border: 1px solid rgba(0,0,0,.1);
            padding: .5rem 0;
            min-width: 200px; /* تحديد عرض أدنى للقائمة المنسدلة */
        }

        .main-menu .dropdown-item {
            padding: .5rem 1rem; /* حشوة عناصر القائمة المنسدلة */
            color: #333;
            font-size: 14px; /* حجم خط عناصر القائمة المنسدلة */
        }

            .main-menu .dropdown-item:hover {
                background-color: #007bff; /* لون خلفية العنصر عند المرور */
                color: #fff; /* لون نص العنصر عند المرور */
            }
        /* لإظهار القائمة المنسدلة عند المرور (اختياري، Bootstrap يتطلب نقرة افتراضياً) */
        /*
                        .main-menu .nav.menu li.dropdown:hover > .dropdown-menu {
                            display: block;
                        }
                        */

    </style>
    @RenderSection("Styles", required: false)
